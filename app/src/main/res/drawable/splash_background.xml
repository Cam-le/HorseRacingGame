<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/splash_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item android:drawable="@color/background_dark" />

    <!-- Logo/Icon in center (optional) -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/primary_red" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>

    <!-- App name text effect (optional) -->
    <item android:gravity="center" android:top="140dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size android:width="200dp" android:height="40dp" />
        </shape>
    </item>

</layer-list>