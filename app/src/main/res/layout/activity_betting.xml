<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’° Betting Room"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAvailablePoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points: 3,000"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:background="#0f3460"
                        android:padding="8dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place your strategic bets on the racers below"
                    android:textSize="14sp"
                    android:textColor="#cccccc" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Racer 1 Betting Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Racer Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRacer1Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ Thunder Bolt"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRacer1Risk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low Risk"
                            android:textSize="12sp"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tvRacer1Odds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.1x"
                            android:textSize="20sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Odds"
                            android:textSize="10sp"
                            android:textColor="#cccccc" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Betting Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Bet Amount Input -->
                    <EditText
                        android:id="@+id/etRacer1Bet"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#0f3460"
                        android:hint="Bet Amount"
                        android:textColor="#ffffff"
                        android:textColorHint="#cccccc"
                        android:inputType="number"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Quick Bet Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnRacer1_100"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="100"
                            android:textSize="11sp"
                            android:textColor="#ffffff"
                            android:background="@drawable/button_small"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btnRacer1_500"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="500"
                            android:textSize="11sp"
                            android:textColor="#ffffff"
                            android:background="@drawable/button_small"
                            android:layout_marginHorizontal="4dp" />

                        <Button
                            android:id="@+id/btnRacer1_1000"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="1000"
                            android:textSize="11sp"
                            android:textColor="#ffffff"
                            android:background="@drawable/button_small"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Potential Winnings -->
                <TextView
                    android:id="@+id/tvRacer1Potential"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:text="Potential Winnings: 0"
                    android:textSize="12sp"
                    android:textColor="#FFD700"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Racer 2 Betting Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Racer Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRacer2Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ Speed Demon"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRacer2Risk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moderate Risk"
                            android:textSize="12sp"
                            android:textColor="#FF9800" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tvRacer2Odds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.8x"
                            android:textSize="20sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Odds"
                            android:textSize="10sp"
                            android:textColor="#cccccc" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Betting Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Bet Amount Input -->
                    <EditText
                        android:id="@+id/etRacer2Bet"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:background="#0f3460"
                        android:hint="Bet Amount"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#cccccc" />

                    <!-- Quick Bet Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnRacer2_100"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_small"
                            android:text="100"
                            android:textColor="#ffffff"
                            android:textSize="11sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btnRacer2_500"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_small"
                            android:text="500"
                            android:textColor="#ffffff"
                            android:textSize="11sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btnRacer2_1000"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_small"
                            android:baselineAligned="false"
                            android:text="1000"
                            android:textColor="#ffffff"
                            android:textSize="11sp"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Potential Winnings -->
                <TextView
                    android:id="@+id/tvRacer2Potential"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potential Winnings: 0"
                    android:textSize="12sp"
                    android:textColor="#FFD700"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Racer 3 Betting Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Racer Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRacer3Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ Dark Horse"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRacer3Risk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High Risk"
                            android:textSize="12sp"
                            android:textColor="#F44336" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tvRacer3Odds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.2x"
                            android:textSize="20sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Odds"
                            android:textSize="10sp"
                            android:textColor="#cccccc" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Betting Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Bet Amount Input -->
                    <EditText
                        android:id="@+id/etRacer3Bet"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:background="#0f3460"
                        android:hint="Bet Amount"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#cccccc" />

                    <!-- Quick Bet Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnRacer3_100"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_small"
                            android:text="100"
                            android:textColor="#ffffff"
                            android:textSize="11sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btnRacer3_500"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_small"
                            android:text="500"
                            android:textColor="#ffffff"
                            android:textSize="11sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btnRacer3_1000"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_small"
                            android:text="1000"
                            android:textColor="#ffffff"
                            android:textSize="11sp"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Potential Winnings -->
                <TextView
                    android:id="@+id/tvRacer3Potential"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potential Winnings: 0"
                    android:textSize="12sp"
                    android:textColor="#FFD700"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Strategy Tips Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Strategy Tips"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvStrategyTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place bets on multiple racers for better odds!"
                    android:textSize="12sp"
                    android:textColor="#cccccc"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Betting Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Betting Summary"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Bets:"
                        android:textSize="14sp"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/tvTotalBets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="#e94560"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Max Potential:"
                        android:textSize="14sp"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/tvMaxPotential"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClearBets"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ—‘ï¸ CLEAR"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_tertiary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnConfirmBets"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="2"
                android:text="âœ… CONFIRM BETS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_primary"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>