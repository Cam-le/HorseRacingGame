<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title and User Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‡ Racing Central"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvUserInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player: Loading..."
                            android:textSize="12sp"
                            android:textColor="#cccccc"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Logout"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_secondary"
                        android:minWidth="80dp" />

                </LinearLayout>

                <!-- Points Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#0f3460"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’° Current Points"
                            android:textSize="12sp"
                            android:textColor="#cccccc" />

                        <TextView
                            android:id="@+id/tvCurrentPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3,000"
                            android:textSize="20sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#0f3460"
                        android:padding="12dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ† High Score"
                            android:textSize="12sp"
                            android:textColor="#cccccc" />

                        <TextView
                            android:id="@+id/tvHighScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3,000"
                            android:textSize="20sp"
                            android:textColor="#FFD700"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Current Race Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ Current Race"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Racer 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvRacer1Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thunder Bolt"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRacer1Odds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.1x"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.example.horseracinggame.view.AnimatedHorseSeekBar
                        android:id="@+id/seekBarRacer1"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:max="100"
                        android:progress="0"
                        style="@style/RaceTrackSeekBar.Red" />

                </LinearLayout>

                <!-- Racer 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvRacer2Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Speed Demon"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRacer2Odds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.8x"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.example.horseracinggame.view.AnimatedHorseSeekBar
                        android:id="@+id/seekBarRacer2"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:max="100"
                        android:progress="0"
                        style="@style/RaceTrackSeekBar.Teal" />

                </LinearLayout>

                <!-- Racer 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvRacer3Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dark Horse"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRacer3Odds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.2x"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.example.horseracinggame.view.AnimatedHorseSeekBar
                        android:id="@+id/seekBarRacer3"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:max="100"
                        android:progress="0"
                        style="@style/RaceTrackSeekBar.Green" />

                </LinearLayout>

                <!-- Race Status -->
                <TextView
                    android:id="@+id/tvRaceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Ready to Race!"
                    android:textSize="16sp"
                    android:textColor="#e94560"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPlaceBets"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ’° PLACE BETS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnStartRace"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ START RACE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_secondary"
                android:layout_marginBottom="12dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnNewRace"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ”„ NEW RACE"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_tertiary"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Quick Stats Footer -->
        <TextView
            android:id="@+id/tvQuickStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ² Place your bets and watch the race!"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>