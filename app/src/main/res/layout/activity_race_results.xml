<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ RACE RESULTS"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvRaceOutcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thunder Bolt Wins!"
                    android:textSize="18sp"
                    android:textColor="#FFD700"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Podium Results -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Final Standings"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 1st Place -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFD700"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥‡"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFirstPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thunder Bolt"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvFirstProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.0% Complete"
                            android:textSize="12sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvFirstOdds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.1x"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- 2nd Place -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#C0C0C0"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥ˆ"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSecondPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speed Demon"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSecondProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95.2% Complete"
                            android:textSize="12sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSecondOdds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.8x"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- 3rd Place -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#CD7F32"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥‰"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvThirdPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dark Horse"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvThirdProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="87.5% Complete"
                            android:textSize="12sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvThirdOdds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.2x"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Betting Summary -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Your Betting Summary"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Total Bet -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Bets:"
                        android:textSize="14sp"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/tvTotalBetAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,500"
                        android:textSize="14sp"
                        android:textColor="#e94560"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Total Winnings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Winnings:"
                        android:textSize="14sp"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/tvTotalWinnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3,150"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Net Result -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Net Result:"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNetResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1,650"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Result Message -->
                <TextView
                    android:id="@+id/tvResultMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Congratulations! You won big!"
                    android:textSize="14sp"
                    android:textColor="#FFD700"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Detailed Bet Breakdown -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Bet Breakdown"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Bet Details Container -->
                <LinearLayout
                    android:id="@+id/layoutBetDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Individual bet details will be added programmatically -->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Race Analytics -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Race Analytics"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvRaceAnalytics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Victory Margin: 4.8%\nAverage Speed: 75ms\nRace Duration: 15.0 seconds"
                    android:textSize="14sp"
                    android:textColor="#cccccc"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Strategic Insights -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Strategic Insights"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvStrategicInsights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Great betting strategy! You diversified your bets effectively and maximized your returns."
                    android:textSize="14sp"
                    android:textColor="#cccccc"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Updated Points Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#0f3460"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Current Points"
                        android:textSize="12sp"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/tvUpdatedPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,650"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#0f3460"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ† High Score"
                        android:textSize="12sp"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/tvUpdatedHighScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,650"
                        android:textSize="20sp"
                        android:textColor="#FFD700"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRaceAgain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ‡ RACE AGAIN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnMainMenu"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ  MAIN MENU"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_secondary"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ Ready for another race?"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>