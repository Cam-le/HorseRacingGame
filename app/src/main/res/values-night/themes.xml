<?xml version="1.0" encoding="utf-8"?>
<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark theme for the application -->
    <style name="Theme.HorseRacingGame" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">#e94560</item>
        <item name="colorPrimaryVariant">#c73650</item>
        <item name="colorOnPrimary">#ffffff</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#0f3460</item>
        <item name="colorSecondaryVariant">#16213e</item>
        <item name="colorOnSecondary">#ffffff</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#1a1a2e</item>
        <item name="colorSurface">#16213e</item>
        <item name="colorOnBackground">#ffffff</item>
        <item name="colorOnSurface">#ffffff</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#1a1a2e</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#1a1a2e</item>

        <!-- Window background -->
        <item name="android:windowBackground">#1a1a2e</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#cccccc</item>
        <item name="android:textColorHint">#999999</item>

        <!-- Action bar -->
        <item name="colorPrimaryDark">#1a1a2e</item>
    </style>

</resources>